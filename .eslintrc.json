{
    "rules": {
        "curly": "error",
        "consistent-return": "off",
        "no-param-reassign": "off",
        "no-underscore-dangle": "off",
        "prefer-rest-params": "off",
        "strict": ["error", "safe"],
        "global-require": "off"
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "plugins": [
        "react"
    ]
}